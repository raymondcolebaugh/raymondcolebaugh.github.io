#/bin/bash
IGNORE_URLS='https://linkedin.com/in/raymondcolebaugh,https://ixti.net/software/2013/01/28/using-jekyll-plugins-on-github-pages.html'
OPTIONS="--only-4xx --empty-alt-ignore --allow-hash-href --check-opengraph --check-html --enforce-https --url-ignore ${IGNORE_URLS}"

set -e

bundle exec jekyll build
bundle exec htmlproofer $OPTIONS _site
